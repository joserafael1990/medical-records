# ============================================================================
# CORTEX Medical Records - Local Development Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env
# ============================================================================

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
APP_ENV=development
LOG_LEVEL=debug

# ----------------------------------------------------------------------------
# Security Keys (REQUIRED - Generate secure random strings)
# ----------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-secret-key-here-generate-a-secure-random-string
JWT_SECRET_KEY=your-jwt-secret-key-here-generate-a-secure-random-string
MEDICAL_ENCRYPTION_KEY=your-encryption-key-here-generate-a-secure-random-string

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
# For local development: Uses hardcoded credentials in compose.dev.yaml
# For production: Uses Azure PostgreSQL via DATABASE_URL (set in Coolify)
DATABASE_URL=postgresql://historias_user:historias_pass@postgres-db:5432/historias_clinicas

# ----------------------------------------------------------------------------
# CORS Configuration
# ----------------------------------------------------------------------------
# For local development, this is usually just localhost
# Format: JSON array as string, e.g., '["http://localhost:3000"]'
CORS_ORIGINS=["http://localhost:3000"]

# ----------------------------------------------------------------------------
# Security Settings
# ----------------------------------------------------------------------------
ENABLE_ENCRYPTION=false
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'; img-src 'self' data:; font-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self'; frame-ancestors 'none'; base-uri 'self'

# ----------------------------------------------------------------------------
# Rate Limiting (Disabled by default in dev)
# ----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_SECONDS=60

# ----------------------------------------------------------------------------
# WhatsApp Configuration (Optional for local dev)
# ----------------------------------------------------------------------------
WHATSAPP_PROVIDER=meta
META_WHATSAPP_PHONE_ID=
META_WHATSAPP_TOKEN=
META_WHATSAPP_API_VERSION=v24.0
META_WHATSAPP_APP_SECRET=
META_WHATSAPP_VERIFY_TOKEN=

# ----------------------------------------------------------------------------
# Sentry Configuration (Optional for local dev)
# ----------------------------------------------------------------------------
SENTRY_DSN_BACKEND=
SENTRY_ENVIRONMENT=development
REACT_APP_SENTRY_DSN=
REACT_APP_SENTRY_ENVIRONMENT=development

# ----------------------------------------------------------------------------
# Frontend Configuration
# ----------------------------------------------------------------------------
REACT_APP_API_URL=http://localhost:8000
REACT_APP_AMPLITUDE_API_KEY=

# ----------------------------------------------------------------------------
# Email Configuration (Optional for local dev)
# ----------------------------------------------------------------------------
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=
# EMAIL_FROM=noreply@cortex-medical.com
