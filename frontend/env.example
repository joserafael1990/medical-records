# ============================================================================
# AVANT - Sistema Médico Inteligente
# Variables de Entorno para Desarrollo y Producción
# ============================================================================

# API Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_TIMEOUT=10000
REACT_APP_API_RETRY_ATTEMPTS=3

# Application Environment
REACT_APP_ENV=development
REACT_APP_VERSION=1.0.0
REACT_APP_APP_NAME="AVANT - Sistema Médico"

# Feature Flags
REACT_APP_ENABLE_DEBUG_LOGS=true
REACT_APP_ENABLE_ERROR_MONITORING=false
REACT_APP_ENABLE_ANALYTICS=false

# Authentication
REACT_APP_JWT_EXPIRY_TIME=24h

# UI Configuration
REACT_APP_THEME_MODE=auto
REACT_APP_DEFAULT_TIMEZONE=America/Mexico_City

# Development Tools
REACT_APP_SHOW_BACKEND_STATUS=true
REACT_APP_ENABLE_DEV_TOOLS=true
