# Variables de Entorno del Backend
# ============================================================================

# Database Configuration
DATABASE_URL=postgresql://historias_user:historias_pass@localhost:5432/historias_clinicas
DB_HOST=localhost
DB_PORT=5432
DB_NAME=historias_clinicas
DB_USER=historias_user
DB_PASSWORD=historias_pass

# Application Configuration
APP_ENV=development
APP_VERSION=1.0.0
APP_NAME="AVANT Backend API"
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Server Configuration
HOST=127.0.0.1
PORT=8000
RELOAD=true
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=true

# Security
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Timezone
DEFAULT_TIMEZONE=America/Mexico_City

# Feature Flags
ENABLE_DEBUG_LOGGING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_MONITORING=false

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@avant-medical.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
